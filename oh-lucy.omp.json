{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
      {
        "alignment": "left",
        "segments": [
          {
            "type": "python",
            "style": "plain",
            "foreground": "#fb7da7",
            "template": "<b>\u26a1</b><b>{{ .Full }} " // Python symbol \ue235
          },
          {
            "foreground": "#af98e6",
            "properties": {
              "style": "folder"
            },
            "style": "plain",
            "template": "<#292c38>\u276f</> \ue5ff {{ .Path }} ",
            "type": "path"
          },
          {
            "foreground": "#F141A8",
            "foreground_templates": [
              "{{ if or (.Working.Changed) (.Staging.Changed) }}#F3EFF5{{ end }}",
              "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#fdad5d{{ end }}",
              "{{ if gt .Ahead 0 }}#51c7da{{ end }}",
              "{{ if gt .Behind 0 }}#51c7da{{ end }}"
            ],
            "properties": {
              "branch_max_length": 25,
              "fetch_stash_count": true,
              "fetch_status": true,
              "fetch_upstream_icon": true
            },
            "style": "plain",
            "template": "<#292c38>\u276f </>{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
            "type": "git"
          },
          {
            "background_templates": ["{{ if gt .Code 0 }}red{{ end }}"],
            "foreground": "#ffffff",
            "properties": {
              "always_enabled": true
            },
            "style": "plain",
            "template": "<#292c38>\u276f </>{{ if gt .Code 0 }}\uf421{{ else }}\uf469{{ end }} ",
            "type": "status"
          }
        ],
        "type": "prompt"
      },
      {
        "alignment": "left",
        "newline": true,
        "segments": [
          {
            "foreground": "#fb7da7",
            "style": "plain",
            "template": "\u276f<#af98e6>\u276f</><#F3EFF5>\u276f</> ",
            "type": "text"
          }
        ],
        "type": "prompt"
      }
    ],
    "version": 2
  }
  